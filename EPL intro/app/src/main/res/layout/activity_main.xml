<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:background="#AF87EC">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIG 6 TEAM"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#3F0571"
        android:gravity="center">

    </TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <ImageButton
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/mu"
        android:background="#FFFFFF"
        android:id="@+id/mu_btn"
        />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/mc"
        android:background="#FFFFFF"
        android:id="@+id/mc_btn"
        />

</LinearLayout><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <ImageButton
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/chelsea"
        android:background="#FFFFFF"
        android:id="@+id/ch_btn"
        />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/liverpool"
        android:background="#FFFFFF"
        android:id="@+id/lp_btn"
        />

</LinearLayout><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <ImageButton
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/tottenham"
        android:background="@color/white"
        android:id="@+id/tot_btn"
        />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/arsenal"
        android:background="@color/white"
        android:id="@+id/ar_btn"
        />

</LinearLayout>



</LinearLayout>