<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="100">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:background="@color/purple_500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:text="승훈 s 계산기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"/>


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="50sp"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/result_text"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:weightSum="100"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="AC"
            android:textSize="30sp"
            android:id="@+id/all_clear_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="CE"
            android:textSize="30sp"
            android:id="@+id/clear_entry_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="BS"
            android:textSize="30sp"
            android:id="@+id/back_space_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="/"
            android:textSize="30sp"
            android:backgroundTint="#BFCAC0"
            android:id="@+id/division_button"/>

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="7"
            android:textSize="30sp"
            android:id="@+id/num_7_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="8"
            android:textSize="30sp"
            android:id="@+id/num_8_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="9"
            android:textSize="30sp"
            android:id="@+id/num_9_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="*"
            android:textSize="30sp"
            android:backgroundTint="#BFCAC0"
            android:id="@+id/Multiply_button"/>

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="4"
            android:textSize="30sp"
            android:id="@+id/num_4_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/num_5_botton"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="6"
            android:textSize="30sp"
            android:id="@+id/num_6_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="-"
            android:textSize="30sp"
            android:backgroundTint="#BFCAC0"
            android:id="@+id/subtraction_button"/>

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="1"
            android:textSize="30sp"
            android:id="@+id/num_1_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="2"
            android:textSize="30sp"
            android:id="@+id/num_2_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="3"
            android:textSize="30sp"
            android:id="@+id/num_3_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="+"
            android:textSize="30sp"
            android:backgroundTint="#BFCAC0"
            android:id="@+id/addition_button"/>

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_margin="3dp"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/num_0_button"/>

        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="."
            android:textSize="30sp"
            android:id="@+id/decimal_button"/>
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_margin="3dp"
            android:text="="
            android:textSize="30sp"
            android:backgroundTint="#BFCAC0"
            android:id="@+id/result_button"/>

        />

    </LinearLayout>



    </LinearLayout>

</LinearLayout>